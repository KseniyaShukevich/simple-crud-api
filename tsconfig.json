{
  "compilerOptions": {
    "module": "ES6",
    "moduleResolution": "Node",
    "target": "ES5",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "strictFunctionTypes": true, 
    "strictBindCallApply": true, 
    "strictPropertyInitialization": true,
    "strict": true, 
  },
  "ts-node": {
    "esm": true,
  },
  "include": ["src/**/*"],
}
